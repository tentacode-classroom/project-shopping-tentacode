        <h1>Accueil</h1>
        <h2>Liste des chats</h2>
        <ul>
            {% for product in products %}
                <li>
                    {{ loop.index }} - 
                    <a href="{{ path('product_detail', {
                        'productId': product.id
                    }) }}">
                        {{ product.id }} {{ product.name|upper }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </body>
</html>